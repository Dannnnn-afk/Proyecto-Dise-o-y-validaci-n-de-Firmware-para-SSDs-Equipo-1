{
  "test_config": {
    "default_test_duration": 60,
    "default_block_size": 4096,
    "default_queue_depth": 32,
    "enable_data_verification": true,
    "enable_smart_monitoring": true,
    "output_directory": "./results",
    "log_level": "INFO"
  },
  "device_config": {
    "device_paths": [
      "/dev/nvme0n1",
      "/dev/nvme1n1"
    ],
    "auto_detect_devices": true,
    "device_timeout_seconds": 30,
    "enable_trim_support": true
  },
  "report_config": {
    "default_format": "html",
    "include_charts": true,
    "include_raw_data": false,
    "template_path": "./templates"
  },
  "performance_tests": {
    "sequential_read": {
      "enabled": true,
      "block_sizes": [4096, 8192, 16384, 65536, 1048576],
      "queue_depths": [1, 4, 8, 16, 32, 64],
      "duration_seconds": 30
    },
    "sequential_write": {
      "enabled": true,
      "block_sizes": [4096, 8192, 16384, 65536, 1048576],
      "queue_depths": [1, 4, 8, 16, 32, 64],
      "duration_seconds": 30
    },
    "random_read": {
      "enabled": true,
      "block_size": 4096,
      "queue_depths": [1, 4, 8, 16, 32, 64, 128],
      "duration_seconds": 60
    },
    "random_write": {
      "enabled": true,
      "block_size": 4096,
      "queue_depths": [1, 4, 8, 16, 32, 64, 128],
      "duration_seconds": 60
    },
    "mixed_workload": {
      "enabled": true,
      "read_percentages": [70, 80, 90],
      "block_size": 4096,
      "queue_depth": 32,
      "duration_seconds": 120
    }
  },
  "reliability_tests": {
    "data_integrity": {
      "enabled": true,
      "pattern_types": ["walking_ones", "walking_zeros", "checkerboard", "random", "address"],
      "cycle_count": 1000,
      "verify_after_power_cycle": true
    },
    "stress_tests": {
      "enabled": true,
      "power_cycle_count": 100,
      "thermal_cycles": 50,
      "continuous_write_hours": 24
    },
    "smart_monitoring": {
      "enabled": true,
      "check_interval_minutes": 5,
      "alert_thresholds": {
        "temperature_celsius": 70,
        "available_spare_percent": 10,
        "percentage_used": 80
      }
    }
  }
}
